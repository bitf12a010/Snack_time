@model Taqdees.Models.User

@{
    Layout = null;
    ViewBag.title = "Sign In page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>layout</title>
    <link href="~/content/bootstrap.css" rel="stylesheet" />
    <script src="~/Script/bootstrap.js"></script>
    <script src="jquery-2.1.4.js"> </script>

</head>
<body background="~/images/bg2.jpg">
    <div class="row">
        <nav class="navbar navbar-inverse" role="navigation">

            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header .text-info">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Snack Time</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="~/Product/home2">Home <span class="sr-only">(current)</span></a></li>
                    <li class="active"><a href="~/Admin/login">Admin <span class="sr-only">(current)</span></a></li>
                    <li class="active"><a href="~/Home/aboutUs">About Us <span class="sr-only">(current)</span></a></li>
                    <li class="active"><a href="~/Home/ContactUs">Contact Us <span class="sr-only">(current)</span></a></li>
                </ul>
                <div class="navbar-form navbar-left pull-right">


                </div>

            </div><!-- /.navbar-collapse -->


        </nav>
        <br />
        <br />
        <br />
        <br />

        <div class="row-fluid">
            <div class="span12 text-center">
                <h2>Sign In</h2>
                <br />

                @using (Html.BeginForm("login", "User", FormMethod.Post))
                {
                    @Html.LabelFor(m => m.Username, "Username ", new { id = "uname" })
                    @Html.TextBoxFor(m => m.Username, new { type = "text", placeholder = "Username" })
                    @Html.ValidationMessageFor(m => m.Username)
                    <br /><br />
                    @Html.LabelFor(m => m.password, "Password ", new { id = "pass" })
                    @Html.TextBoxFor(m => m.password, new { type = "text", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.password)

                    <div>
                        <p style ="color:red"> Either username or passowrd incorrect</p>

                    </div>

                    <button type="submit" class="btn btn-success">Submit</button>
                    <a href="~/User/Signup" class="btn btn-success" role="button">Sign Up</a>
                }

            </div>
        </div>



        <br />
        <br />
        <br />
        <br />
        <br />
        <footer class="modal-footer">Copy rights by snack time</footer>
</body>
</html>