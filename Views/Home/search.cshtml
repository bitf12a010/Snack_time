                //alert('User Name ='+ userName);

                $.getJSON("/Home/search?t1=" + t1+"& c1=" +c1, function (s) {


                    $('#table').append("<tr><td>"+@s.Name+"</td><td>"+@s.Price+"</td></tr>");

                });

            });

        });
    </script>
